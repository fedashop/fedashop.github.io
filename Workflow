name: Deploy Pages (root)

on:
  push:
    branches:
      - main

permissions:
  contents: write
  pages: write
  id-token: write

jobs:
  publish:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/upload-pages-artifact@v1
        with:
          path: ./

  deploy:
    needs: publish
    runs-on: ubuntu-latest
    environment:
      name: github-pages
      url: https://fedashop.github.io
    steps:
      - uses: actions/deploy-pages@v3

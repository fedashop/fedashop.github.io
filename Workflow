name: Deploy Pages (root)

on:
  push:
    branches:
      - main

permissions:
  contents: write
  pages: write

jobs:
  publish:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - run: echo "fedashop.shop" > ./CNAME
      - uses: actions/upload-pages-artifact@v1
        with:
          path: ./

  deploy:
    needs: publish
    runs-on: ubuntu-latest
    steps:
      - uses: actions/deploy-pages@v1
